<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data>
         <!-- mx partner address -->
          <record model="ir.ui.view" id="l10n_mx_edi.view_prod_form_inh_l10n_mx">
            <field name="name">view.prod.form.inh.l10n.mx</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name="arch" type="xml">
            <data>
                <xpath expr="//page[@name='invoicing']" position="inside">
                    <group string="CFDI" groups="custom_mx_edi.group_max_edi_manager">
                        <field name="l10n_mx_edi_code_sat_id" options='{"no_create": True}'  groups="custom_mx_edi.group_max_edi_manager"/>
                    </group>
                </xpath>
            </data>
            </field>
        </record>

    <record id="l10n_mx_edi.mx_partner_address_form" model="ir.ui.view">
        <field name="name">mx.partner.form.address</field>
        <field name="model">res.partner</field>
        <field name="priority" eval="900"/>
        <field name="arch" type="xml">
                 <form>
                <div class="o_address_format">
                    <field name="parent_id" invisible="1"/>
                    <field name="type" invisible="1"/>
                    <field name="street" invisible="1"/>
                    <field name="street_name" placeholder="Street Name..." attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                    <div class="o_row" groups="custom_mx_edi.group_max_edi_manager">
                        <label for="street_number" class="oe_edit_only"/>
                        <span> </span>
                        <field name="street_number" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" groups="custom_mx_edi.group_max_edi_manager"/>
                        <label for="street_number2"/>
                        <field name="street_number2" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" groups="custom_mx_edi.group_max_edi_manager"/>
                    </div>
                    <field name="street2" invisible="1"/>
                    <field name="l10n_mx_edi_colony" placeholder="Colony..." groups="custom_mx_edi.group_max_edi_manager"/>
                    <field name="l10n_mx_edi_locality" placeholder="Locality..." groups="custom_mx_edi.group_max_edi_manager"/>
                    <field name="city" placeholder="City" class="o_address_city"/>
                    <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                    <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                </div>
            </form>
            </field>
        </record>
     </data>

</odoo>