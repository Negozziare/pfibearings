<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_company_inherit_show_form" model="ir.ui.view">
            <field name="name">res.company.form.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="group_hide_field"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="customer_res_partner_inherit_form">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="is_show" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='street_number']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_show','=',True)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
