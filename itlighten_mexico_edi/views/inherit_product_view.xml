<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data>
         <!-- MX Product -->
          <record model="ir.ui.view" id="l10n_mx_edi.view_prod_form_inh_l10n_mx">
            <field name="name">view.prod.form.inh.l10n.mx</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name="arch" type="xml">
            <data>
                <xpath expr="//page[@name='invoicing']" position="inside">
                    <group string="CFDI">
                        <field name="is_show" invisible="1"/>
                        <field name="l10n_mx_edi_code_sat_id" options='{"no_create": True}' attrs="{'invisible': [('is_show','=',False)]}"/>
                    </group>
                </xpath>
            </data>
            </field>
        </record>
        <record model="ir.ui.view" id="l10n_mx_edi_external_trade.view_prod_form_inh_l10n_mx_edi_external_trade">
            <field name="name">view.prod.form.inh.l10n.mx.edi.external.trade</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='l10n_mx_edi_code_sat_id']" position="after">
                    <field name="l10n_mx_edi_tariff_fraction_id" attrs="{'invisible': [('is_show','=',False)]}"/>
                    <field name="l10n_mx_edi_umt_aduana_id" attrs="{'invisible': [('is_show','=',False)]}"/>
                    <field name="weight" attrs="{'invisible': [('is_show','=',False)]}"/>
                </xpath>
            </data>
            </field>
        </record>
    </data>
</odoo>
