<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="l10n_mx_edi.mx_partner_address_form" model="ir.ui.view">
            <field name="name">mx.partner.form.address</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="900"/>
            <field name="arch" type="xml">
                <form>
                    <div class="o_address_format">
                        <field name="parent_id" invisible="1"/>
                        <field name="type" invisible="1"/>
                        <field name="street" invisible="1"/>
                        <field name="street_name" placeholder="Street Name..."
                               attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                        <div class="o_row">
                            <label for="street_number" class="oe_edit_only" attrs="{'invisible' : [('check_mexican', '!=', True)]}"/>
                            <span></span>
                            <field name="street_number"
                                   attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)], 'invisible' : [('check_mexican', '!=', True)]}"/>
                            <label for="street_number2" attrs="{'invisible' : [('check_mexican', '!=', True)]}"/>
                            <field name="street_number2"
                                   attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)], 'invisible' : [('check_mexican', '!=', True)]}"/>
                        </div>
                        <field name="street2" invisible="1"/>
                        <field name="l10n_mx_edi_colony" placeholder="Colony..."/>
                        <field name="l10n_mx_edi_locality" placeholder="Locality..."/>
                        <field name="city" placeholder="City" class="o_address_city"/>
                        <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                        <field name="country_id" placeholder="Country" class="o_address_country"
                               options='{"no_open": True, "no_create": True}'/>
                        <field name="check_mexican" invisible="1"/>
                    </div>
                </form>
            </field>
        </record>
    </data>

</odoo>